<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

<!-- Base application theme. -->
  <style name="AppTheme" parent="AppTheme.Base">
  </style>
   
  <style name="AppTheme.Base" parent="Theme.AppCompat">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
    <item name="windowNoTitle">true</item>
    
    <item name="colorPrimary">@color/titleBlue</item>
  <!--Status bar color-->
  <item name="colorPrimaryDark">#fcc039</item>
  <!--Window color-->
  <item name="android:windowBackground">@color/background</item>
  <item name="colorAccent">#ffffff</item>
  </style>
  
  <style name="MingDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">  
          
    </style> 
  
  
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorPrimary">@color/titleBlue</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    
    
    <style name="FloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
 </style>

</resources>