    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/ll_nearbyview"
      android:layout_width="match_parent"
      android:layout_height="62dp"
      android:layout_alignParentTop="true"
      android:background="@drawable/home_head"
      android:orientation="horizontal"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      >

        <com.wxxiaomi.electricbicycle.view.custom.CircularImageView
            android:id="@+id/iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/tou" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_near_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:text="王先生"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top"
                android:text="16小时前"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_near_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:src="@drawable/ic_common_add_press" />

        <ImageView
            
            android:id="@+id/iv_near_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_label_delete_green" />
    </LinearLayout>